<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {% if page is defined and page is not null %} {{ page.name }} {% endif %} {% endblock %}</title>

        {{ encore_entry_link_tags('default') }}
        {{ encore_entry_script_tags('default') }}
    </head>
    <body class="d-flex flex-column min-vh-100">

        <div class="container">
            <div class="row">
                <div class="col-12">
                    {% include '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/nav-top.html.twig' %}
                </div>

                <div class="col-12">
                    {% block breadcrumbs %}{% endblock %}
                    <div class="row">
                        <div class="col-6"><h1>{%block h1 %} {% if page is defined and page is not null %} {{ page.name }} {% endif %} {% endblock %}</h1></div>
                        <div class="col-6 pt-3">{%block h1_right %}{% endblock %}</div>
                    </div>

                    {% block body %}{% endblock %}
                </div>
            </div>

        </div>
        {% include '@Admin/' ~ app.request.attributes.get('active_site').templatePath ~ '/footer.html.twig' %}
    </body>
</html>
